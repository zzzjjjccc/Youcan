<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_c3c3c3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_c3c3c3"
        android:orientation="vertical">

        <include layout="@layout/item_youcan_toobar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_55ffffff"
            android:padding="@dimen/dimen_10">

            <LinearLayout
                android:id="@+id/ll_me_to_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/shape_layout_border"
                android:padding="@dimen/dimen_10">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_me_header_image"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/header" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_2">

                    <TextView
                        android:id="@+id/tv_person_detail_school"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_person_detail_major"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_person_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_person_detail_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_size_16" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_person_detail_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_me_to_profile"
                android:layout_marginTop="@dimen/dimen_50"
                android:background="@drawable/shape_layout_border"
                android:enabled="false"
                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:text="@string/add_person"
                android:textSize="@dimen/font_size_16" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
