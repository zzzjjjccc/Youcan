<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_88ffffff">

    <LinearLayout
        android:id="@+id/ll_contacts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/item_youcan_toobar" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_contacts_tab"
            android:layout_width="match_parent"
            app:tabTextColor="@color/color_88ffffff"
            app:tabSelectedTextColor="@color/color_ffffff"
            app:tabBackground="@color/colorPrimary"
            app:tabIndicatorColor="@color/color_ffffff"
            app:tabTextAppearance="@style/TabLayoutTextAppearance"
            android:layout_height="wrap_content"/>

        <!--用于盛放不同的板块-->
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_contacts_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</RelativeLayout>